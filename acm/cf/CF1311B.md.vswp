const int maxn = 5e5 + 5;
const int inf  = 0x3f3f3f3f;

bool cmp(pair<int,int> a,pair<int,int> b)
{
    return a.first>b.first;
}

int nums[maxn],nu[maxn];
int flag[maxn];

int main() {
    std::ios::sync_with_stdio(false);
    cin.tie(0);
    int t,n,m,tmp;
    cin>>t;

    while (t--)
    {
        
        cin>>n>>m;
        fill(flag,flag+n+2,0);

        for (int i = 1; i <= n; i++)
        {
            cin>>nums[i];
            nu[i] = nums[i];
        }
        sort(nums+1,nums+n+1);

        for (int i = 0; i < m; i++)
        {
            cin>>tmp;
            flag[tmp] = 1;
            
        }
        
        for (int i = 1; i <= n; i++)
        {
            //cout<<"i = "<<i<<endl;
            if(!flag[i])continue;

            int j = i;
            while (j+1<n&&flag[j+1])j++;
            
            sort(nu+i,nu+j+2);
            i = j;
            
        }

        int kk = 0;

        for (int i = 1; i <= n; i++)
        {
            if(nu[i] != nums[i]){
                kk = 1;
                break;
            }
        }
        if(kk){
            cout<<"NO\n";
        }else
        {
            cout<<"YES\n";
        }
        
        
        
    }
    
    

    
    return 0;
}

